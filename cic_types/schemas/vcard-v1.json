{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.grassrootseconomics.net:8433/vcard-v1.json",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "pattern": "^\\S+@\\S+\\.\\S+$"
    },
    "family": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "given": {
      "type": "string",
      "pattern": "^(.*)$"
    },
    "tel": {
      "type": "string",
      "pattern": "^(\\+?[0-9]+)$"
    }
  },
  "required": ["family", "given", "tel"]
}
